#include<iostream>

#include<conio.h>

#include<cmath>

#include<iomanip>

 

 

using namespace std;

 

int main()

{

                int x;

                float y, v, z;

                z = 2.5;

                cout<< "Enter value for x: ";

                cin>> x;

                cout<< "Enter value for y: ";

                cin>> y;

               

                switch (x)

                {

                case 1:

                if ( y> 1 && y < 5)

                cout<< "The value of V is: " <<setprecision(3) <<setw (10) << x * y * z;

               

                else if (y>=5)

                cout<< "The value of V is: " <<setprecision(3) <<setw (10) << x + (y / z);

                break;

               

                case 2:

                if ( y<= 5)

                cout<< "The value of V is: " <<setprecision(3) <<setw (10) << abs ((x-y) / z);

                else

                cout<< "The value of V is: " <<setprecision(3) <<setw (10) << x - sqrt(y+z);

                break;

               

                default:

                                cout<< "The value of V is: " <<setprecision(3) <<setw (10) << x + y + z;

                }

               

               

                _getch();

                return 0;

}
